---
import type { ImageMetadata } from 'astro'
import { getName } from './format'

interface Props {
  file: ImageMetadata
}

const { file } = Astro.props
---

<div class='icon'>
  <img
    src={file.src}
    alt={`Icon name - ${getName(file.src)}`}
    loading='lazy'
    decoding='async'
    width='30'
    height='30'
  />
</div>
