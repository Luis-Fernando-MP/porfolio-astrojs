---
import '@fontsource-variable/tourney'
import '@fontsource-variable/lexend'
import '@fontsource-variable/baloo-da-2'
import './layout.scss'
import './responsiveLayout.scss'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/logo.webp' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot name='balls' />
    <main>
      <slot />
    </main>
    <aside class='chatBot'>
      <script>
        window.addEventListener('mouseover', bootstrap, { once: true })
        window.addEventListener('touchstart', bootstrap, { once: true })
        let bot
        function bootstrap() {
          if (!bot) {
            var s = document.createElement('script')
            s.type = 'text/javascript'
            s.async = true
            s.addEventListener('load', function () {
              var bot = new Landbot.Livechat({
                configUrl:
                  'https://storage.googleapis.com/landbot.site/v3/H-2111888-ISUNPQ9SM6UL6TP2/index.json'
              })
            })
            s.src = 'https://cdn.landbot.io/landbot-3/landbot-3.0.0.js'
            var x = document.getElementsByTagName('script')[0]
            x.parentNode.insertBefore(s, x)
          }
        }
      </script>
    </aside>
  </body>
</html>
