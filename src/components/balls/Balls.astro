---
import backgroundColors from '@data/backgroundColors.json'
export enum BallsPosition {
  left = 'LEFT-CENTER',
  right = 'RIGHT-CENTER'
}

interface Props {
  position?: BallsPosition | null
  colors?: typeof backgroundColors.moraNormal
}
import './style.scss'
import './responsiveStyle.scss'

const { colors, position } = Astro.props

const backgroundBalls = colors ?? backgroundColors.moraNormal
---

<section class={`balls ${position || BallsPosition.right}`}>
  <div style={`--color-ball: ${backgroundBalls.color1}`}></div>
  <div style={`--color-ball: ${backgroundBalls.color2}`}></div>
  <div style={`--color-ball: ${backgroundBalls.color3}`}></div>
</section>
